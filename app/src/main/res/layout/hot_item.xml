<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_account_circle_white_48dp"
            android:id="@+id/photo_hot"
            android:layout_height="50dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/photo_hot"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:hint="fioe"
            android:id="@+id/hot_name"/>
        <TextView
            android:layout_toRightOf="@id/photo_hot"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:alpha="0.6"
            android:textSize="12dp"
            android:layout_below="@id/hot_name"
            android:gravity="center_vertical"
            android:hint="fioe"
            android:id="@+id/hot_time"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/linear_hot"
            android:layout_toRightOf="@id/photo_hot"
            android:layout_below="@id/hot_time"
            android:layout_height="190dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_hot_one"
                android:orientation="horizontal">
                <com.example.administrator.quxiang.view.RoundImageView
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    app:shape_mode="round_rect"
                    android:background="@drawable/background_image"
                    app:round_radius="8dp"
                    android:id="@+id/hot_image_one"
                    android:layout_marginRight="10dp"
                    android:layout_height="150dp" />
                <com.example.administrator.quxiang.view.RoundImageView
                    android:layout_width="100dp"
                    app:shape_mode="round_rect"
                    android:background="@drawable/background_image"
                    app:round_radius="8dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/hot_image_two"
                    android:layout_height="150dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/linear_hot_two"
                android:orientation="horizontal">
                <com.example.administrator.quxiang.view.RoundImageView
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/background_image"
                    app:shape_mode="round_rect"
                    app:round_radius="8dp"
                    android:id="@+id/hot_image_three"
                    android:layout_marginRight="10dp"
                    android:layout_height="150dp" />
                <com.example.administrator.quxiang.view.RoundImageView
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    app:shape_mode="round_rect"
                    android:background="@drawable/background_image"
                    app:round_radius="8dp"
                    android:id="@+id/hot_image_four"
                    android:layout_height="150dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/photo_hot"
            android:layout_below="@id/linear_hot"
            android:layout_width="match_parent"
            android:hint="jioffe"
            android:textColor="#222222"
            android:layout_height="wrap_content"
            android:id="@+id/hot_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/control"
            android:text="展开"
            android:hint="joe"
            android:visibility="gone"
            android:textColor="#ed6d39"
            android:layout_below="@id/hot_content"
            android:layout_toRightOf="@id/photo_hot"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/control"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/photo_hot"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/praise"
                android:layout_marginLeft="124dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@mipmap/good"/>
            <TextView
                android:id="@+id/praiseNumber"
                android:layout_width="20sp"
                android:textColor="#888888"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@mipmap/comment"/>
            <TextView
                android:id="@+id/commentNumber"
                android:textColor="#888888"
                android:layout_width="20sp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>